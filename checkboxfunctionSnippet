function hline(pan) {
 pan.add( ui.Label( 
   {value:'null',
   style:{
  width:'100%',
  height: '0px',
   padding: '0px ',
   margin: '0px 0px 0px 0px',
   border:  '0.5px solid gray',
   stretch:'horizontal',
   }}
   ));
}

var props = require('users/stormwaterheatmap/apps:Modules/layerProperties')
var layerProperties = props.layerProperties
print(layerProperties)

var testPanel = ui.Panel({
  style: {
    //width: '33%', height: '80%', 
    
    position: 'bottom-right'
  }
})
Map.add(testPanel)

//check boxes ui.Checkbox(label, value, onChange, disabled, style)
var checkbox = function (name) {
  var cb = ui.Checkbox({
    label: name, 
    value: 0, 
    style: {
      //margin: 0,
      //margin: '1px 1 px 1px 100px'
    }
  })
      return cb
}

var headingLabel = ui.Label({
  value: 'Precipitation and Hydrology'
}); 

var headingLabel2 = ui.Label({
  value: 'Land use and Land cover'
})

var thislayer = layerProperties.DevAge
var cb1 = checkbox(thislayer.layerName)
  cb1.onChange(function(){
    print(cb1.getValue())
    Map.addLayer(thislayer.layer)
  })
var thislayer = layerProperties.Soils
var cb2 = checkbox(thislayer.layerName)

testPanel.add(headingLabel)
hline(testPanel)
testPanel.add(cb1).add(cb2)
testPanel.add(headingLabel2)



