  layers: [precip, soils, slope, landcover, hruBands],
  names: ['Precipitation', 'Soils', 'Slope', 'Land Cover', "HRUs"],  
  palettes: [palettes.misc.jet[7], 'that', 'the other thing']
});

print(layerDict)
