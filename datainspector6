//cards function 
print('cards function')
var cards = function(title,widgetItems) {
  var cardTitle = ui.Label(title)
  var wholeCard = ui.Panel({
    widgets: widgetItems, 
    style: {border: '8px solid whitesmoke', 
    padding: '12px'}
  })
  wholeCard.insert(0, cardTitle)
  //wholeCard.add(widgetItems)
    return wholeCard
}

