    infoTab.add(closeTab)
    print('ok....')
    //infoTab.setOptions({orientation: 'vertical'})
    //print(infoTab)
    buttonPanel.add(ui.Button({
        label: 'Show Watershed Information Table',
        onClick: function () {
            mapPanel.add(infoTab)
            infoTab.style().set({
                shown: true
            })
        }
    }))

    return clicked_basin
    return clicked_basin_geom
}

